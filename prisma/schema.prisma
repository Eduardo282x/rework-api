generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  idUser Int @id @default(autoincrement())
  name String
  lastname String
  username String?
  password String
  description String?
  // picture String
  skills String?
  date DateTime?
  age Int?
  country String?
  email String
  phone String?
  rolId Int
  rol Rol @relation(fields: [rolId], references: [idRol])
}
model Rol {
  idRol Int @id @default(autoincrement())
  description String
  user User[]
}

model Skills {
  idSkills Int @id @default(autoincrement())
  description String
}

